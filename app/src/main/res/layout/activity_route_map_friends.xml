<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.MapFriendsActivity">

    <!-- T맵 컨테이너 -->
    <FrameLayout
        android:id="@+id/tmapcon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="531dp"
        android:layout_weight="1"
        android:background="@color/gray9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- T맵이 여기에 추가됩니다 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="지도 로딩 중..."
            android:textColor="@color/text_secondary"
            android:visibility="gone" />

    </FrameLayout>

    <!-- 경로 정보 영역 -->
    <LinearLayout
        android:id="@+id/route_details_container"
        android:layout_width="409dp"
        android:layout_height="260dp"
        android:background="@color/surface_color"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:text="상세 경로"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_route_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            tools:listitem="@layout/item_route_segment" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

