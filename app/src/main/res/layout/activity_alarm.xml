<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#121212">

    <!-- 알람 시간 -->
    <TextView
        android:id="@+id/text_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp" />

    <!-- 알람 보낸 사용자 -->
    <TextView
        android:id="@+id/text_alarm_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보낸 사람: 홍길동"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="36dp" />

    <!-- 알람 종료 버튼 -->
    <Button
        android:id="@+id/btn_end_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알람 종료"
        android:backgroundTint="#A020F0"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp" />

    <!-- 재알림 버튼 -->
    <Button
        android:id="@+id/btn_snooze_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5분 후 다시 알림"
        android:backgroundTint="#A020F0"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp" />

    <!-- 알람 관리로 이동 -->
    <Button
        android:id="@+id/btn_move_to_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알람 관리로 이동"
        android:backgroundTint="#A020F0"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp" />

    <!-- 참여자 보기 -->
    <Button
        android:id="@+id/btn_show_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👥 참여자 보기"
        android:backgroundTint="#A020F0"
        android:textColor="@android:color/white" />
</LinearLayout>